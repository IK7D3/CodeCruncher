{
  "manifest_version": 3,
  "name": "CodeCruncher",
  "version": "1.1.0",
  "description": "کد نهایی سوالات کوئرا را با یک کلیک دریافت کنید.",
  "permissions": ["activeTab", "scripting", "downloads"],
  "host_permissions": ["https://quera.org/*", "http://127.0.0.1:8000/"],
  
  "background": { "service_worker": "background.js" },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png"
    }
  },

  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  
  "content_scripts": [
    {
      "matches": ["https://quera.org/problemset/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}